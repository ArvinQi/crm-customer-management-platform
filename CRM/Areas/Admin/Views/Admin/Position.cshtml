                    <td>职位名称：</td>
                    <td><input id="Name" name="Name" type="text" placeholder="请输入职位名称" /></td>
                </tr>
                <tr>
                    <td>部门名称：</td>
                    <td>
                        @Html.DropDownList("DepartSelect", @ViewData["DepartList"] as SelectList)
