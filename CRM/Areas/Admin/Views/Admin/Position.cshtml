<script type="text/javascript">
    function loadDataTalbe(DepartID) {//根据部门信息加载右侧easyUI的datagrid
        $('#dg').datagrid({//初始化datagrid控件
            title: 'DutyInfo',
            url: '@Url.Content("~/Admin/Admin/GetAlltb_Duties/")' + DepartID,
            columns: [[
		            { field: 'DutyID', title: 'DutyID', width: 80 },
		            { field: 'Name', title: 'Name', width: 100 },
		            { field: 'DepartName', title: 'DepartName', width: 100 },
                    { field: 'Remark', title: 'Remark', width: 80, align: 'right' }
            ]],
            rownumbers: true,
            singleSelect: true,
            pagination: true
        });
        var pager = $('#dg').datagrid().datagrid('getPager');	// get the pager of datagrid
        pager.pagination({
            buttons: [{
                //    iconCls: 'icon-search',
                //    handler: function () {
                //        alert('search');
                //    }
                //}, {
                iconCls: 'icon-add',
                handler: function () {
                    $("#DutyID").val("");
                    $("#Name").val("");
                    $("#DepartSelect").val("");
                    $("#Remark").val("");
                    $("#dlgEdit").dialog({
                        title: "部门信息",
                        autoOpen: false,
                        modal: true,
                        buttons: [
                        {
                            text: "Cancel",
                            onClick: function () {
                                $("#dlgEdit").dialog("close");
                            }
                        },
                        {
                            text: "  Add  ",
                            onClick: function () {
                                if ($("#Name").val() == "") {
                                    $("#Name").focus();
                                    return;
                                }
                                $("#depart_id").val($("#DepartSelect").val());
                                $.ajax({
                                    url: '/CRM/api/ApiDuties/',
                                    type: 'POST',
                                    data: { Name: $("#Name").val(), Remark: $("#Remark").val(), DepartID: $("#DepartSelect").val() },
                                    success: function (data) {
                                        //alert(data);
                                        $("#dlgEdit").dialog("close");
                                        //jQuery1_8_2('#dg').datagrid();
                                    }
                                });

                            }
                        }
                        ]
                    });
                }
            }, {
                iconCls: 'icon-edit',
                handler: function () {
                    //alert('edit');
                    var row = $('#dg').datagrid('getSelected');
                    if (row) {
                        //jQuery1_8_2.messager.alert('Info', row.DutyID + ":" + row.Name + ":" + row.DepartID);
                        $.ajax({
                            url: '@Url.Content("~/Admin/Admin/Gettb_Duties/")' + row.DutyID,
                            type: 'Get',
                            dataType: 'JSON',
                            success: function (data) {
                                data = eval('(' + data + ')');
                                //alert(data.DutyID);
                                $("#DutyID").val(data.DutyID);
                                $("#Name").val(data.Name);
                                $("#DepartSelect").val(data.DepartID);
                                $("#Remark").val(data.Remark);
                                $("#dlgEdit").dialog({
                                    title: "部门信息",
                                    autoOpen: false,
                                    modal: true,
                                    buttons: [
                                    {
                                        text: "Cancel",
                                        onClick: function () {
                                            $("#dlgEdit").dialog("close");
                                        }
                                    },
                                    {
                                        text: " Save ",
                                        onClick: function () {
                                            if ($("#Name").val() == "") {
                                                $("#Name").focus();
                                                return;
                                            }
                                            $("#depart_id").val($("#DepartSelect").val());
                                            $.ajax({
                                                url: '/CRM/api/ApiDuties/' + $("#DutyID").val(),
                                                type: 'PUT',
                                                data: $("#frmEdit").serialize(),
                                                success: function (data) {
                                                    //alert(data);
                                                    $("#dlgEdit").dialog("close");
                                                    //jQuery1_8_2('#dg').datagrid();
                                                }
                                            });

                                        }
                                    }
                                    ]
                                });
                                //var buttons = jQuery1_8_2("#dlgEdit").dialog('option', 'buttons');
                                //alert(buttons);
                            }
                        });
                    } else {
                        alert("Please select one first!");
                    }
                }
            }, {
                iconCls: 'icon-remove',
                handler: function () {
                    var row = $('#dg').datagrid('getSelected');
                    if (row) {
                        if (confirm("Are you confirm?")) {
                            //alert("确认！");
                            $.ajax({
                                url: '/CRM/api/ApiDuties/'+ row.DutyID,
                                type: 'DELETE',
                                success: function (data) {
                                    //alert(data.success);
                                }
                            });
                        }
                    } else {
                        alert("Please select one first!");
                    }
                }
            }]
        });
    }
</script>
